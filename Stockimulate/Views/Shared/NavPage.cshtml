@{
    Layout = "_Layout";
}
@model NavPageViewModel

    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#"><strong>stock</strong>imulate</a>
        <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav mr-auto mt-2 mt-md-0">
                
                @if (!string.IsNullOrEmpty(Model.Role))
                {

                    if (Model.Role == "Administrator")
                    {
                        <li class='nav-item'><a class='nav-link' asp-controller="ControlPanel" asp-action="ControlPanel">Control Panel</a></li>
                        <li class='nav-item'><a class='nav-link' asp-controller="Standings" asp-action="Standings">Standings</a></li>
                        <li class='nav-item'><a class='nav-link' asp-controller="TradeInput" asp-action="TradeInput" >Trade</a></li>
                    }

                    if (Model.Role == "Administrator" || Model.Role == "Regulator")
                    {
                        <li class='nav-item dropdown'>
                            <a href='#' class='nav-link dropdown-toggle' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false'>Anti Fraud</a>
                            <div class='dropdown-menu'>
                                <a class='dropdown-item' asp-controller="SearchTrades" asp-action="SearchTrades">Search Trades</a>
                                <a class='dropdown-item' asp-controller="Reports" asp-action="Reports">Search Reports</a>
                            </div>
                        </li>
                    }

                }

            </ul>

            @if (string.IsNullOrEmpty(Model.Role))
            {

                <form class="form-inline my-2 my-lg-0 login-form" method="post" asp-controller="NavPage" asp-action="Login">
                    <div class="form-group mr-sm-2">
                        <input type="text" class="form-control input-sm" placeholder="Username" asp-for="Username">
                    </div>
                    <div class="form-group mr-sm-2">
                        <input type="password" class="form-control input-sm" placeholder="Password" asp-for="Password">
                    </div>
                    <input type="submit" class="btn btn-sm btn-primary btn-log" value="Sign In"/>
                </form>
            }

            else
            {
                <form class="form-inline my-2 my-lg-0" method="post" asp-controller="NavPage" asp-action="Logout">
                    
                    <div class="form-group nav-text text-white mr-sm-2">@Model.Role</div>
                    <button class="btn btn-sm btn-primary btn-log">Log Out</button>
                    
                </form>
            }
           
        </div>
    </nav>

<div class="container mt-4">

    @RenderBody()

</div>